@using Kruger.Marketplace.CrossCutting.ViewModels.CadastroBasico.Categoria
@model CategoriaViewModel

@{
    ViewBag.Title = $"Excluir a categoria {Model.Nome}";
}

<div>
    <h1>@ViewBag.Title</h1>
</div>

@* <div asp-validation-summary="ModelOnly" class="clientside-validation-summary text-danger"></div> *@


<partial name="_AlertPartial"/>

<h3>Tem certeza que deseja excluir a categoria @Model.Nome?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-warning">Voltar</a>
    </form>
</div>
